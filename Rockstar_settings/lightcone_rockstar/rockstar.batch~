#!/bin/bash -l
#
#SBATCH --account=s969
#SBATCH --job-name="lightcone_rockstar_lcdm"
#SBATCH --time=03:00:00
#SBATCH --partition=normal
#SBATCH --ntasks=960
#SBATCH --ntasks-per-node=1
#SBATCH --constraint=gpu
#SBATCH --output=writer.%j.o
#SBATCH --error=writer.%j.e

#======START=====
module load daint-gpu

./rockstar -c ./rockstar.cfg >>server.o 2>>server.e </dev/null &

sleep 20

srun --ntasks=960 --ntasks-per-node=1 --wait=0 --kill-on-bad-exit --multi-prog ./rockstar_writers.cfg
